<!-- cart show.html.erb -->

<div class="container">
	<div class="row">
		<div class="span12 custom-block">

			<% if notice %>
			<div class="alert alert-success fade in">
				<a class="close" data-dismiss="alert" href="#">&times;</a>
				<%= notice %>
			</div>
			<% end %>

			<% if alert %>
			<div class="alert alert-success fade in">
				<a class="close" data-dismiss="alert" href="#">&times;</a>
				<%= alert %>
			</div>
			<% end %>
			<div style="margin-left: 40px; margin-right: 40px">
				<h2>Shopping Cart</h2>

				<%= render :partial => 'show'%>

				<br><br>


				<%= link_to("Checkout", url_for(:controller => "purchases", :action => "new"), :class=> "btn btn-primary", :style=>"float:right; margin-left:8px;") %>

				<%= link_to("Continue Shopping", inventories_path, :class=>"btn", :style=>"float:right;") %>

			</div>
		</div>
	</div>
</div>
