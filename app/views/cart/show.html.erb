<div class="container">
  <div class="row">
    <div class="span8 offset2 custom-block" >

<% if notice %>
    <div class="home_alert home_alert-success fade in">
        <a class="close" data-dismiss="alert" href="#">&times;</a>
        <%= notice %>
    </div>
    <% end %>
<h2 align="center">Shopping Cart</h2>
<table class="table table-hover">
  <tr>
    <th>Product</th>
    <th>Qty</th>
    <th>Unit Price</th>
    <th>Full Price</th>
    <th></th>
  </tr>
  <% for cart_item in @cart.cart_items %>
      <td><%= cart_item.item.name %></td>
      <td>
        <%= form_for(cart_item, :url => url_for({ :controller => "cart_items", :action => "update", :cart_item_id => cart_item.id}), 
        :html => {:class => 'form-horizontal'} ) do |f| %>
          <div>
            <%= f.text_field :quantity, :style => "width:20px"%>
            <% if ((params[:item].to_i == cart_item.id) && (params[:disable] == "true")) %>
            <%= f.submit "Updated" %>
            <% else %>
            <%= f.submit "Update" %>         
            <% end %>
          </div>
        <% end %>
      </td>
      <td ><%= number_to_currency(cart_item.item.price) %></td>
      <td ><%= number_to_currency(cart_item.quantity*cart_item.item.price) %></td>
      <td><%= link_to "Delete", cart_item, :confirm => 'Are you sure?', :method=>:delete, :class=>:Destroy %></td>
    </tr>
    </tr>
  <% end %>
 </table>
 <table class="table table-hover">
      <div style="float:right; margin-right: 10px">Total: <%= number_to_currency @cart.total_price %></div>
   </table>


<p>
  <div style="float:right; margin-right: 10px;">
  <%= link_to "Continue Shopping", items_url %> |
  <%= link_to "Checkout" %>
  </div>
</p>
    </div>
  </div>
</div>
