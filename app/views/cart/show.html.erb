<table class="table table-hover">
  <tr>
    <th>Product</th>
    <th>Qty</th>
    <th>Unit Price</th>
    <th>Full Price</th>
  </tr>
  <% for cart_item in @cart.cart_items %>
      <td><%= cart_item.item.name %></td>
      <td>
        <%= form_for(cart_item, :url => url_for({ :controller => "cart_items", :action => "update", :cart_item_id => cart_item.id}), 
        :html => {:class => 'form-horizontal'} ) do |f| %>
          <div>
            <%= f.text_field :quantity, :style => "width:20px" %>
            <%= f.submit "Update", :disable_with => "Updated"%>
          </div>
        <% end %>
      </td>
      <td ><%= number_to_currency(cart_item.item.price) %></td>
      <td ><%= number_to_currency(cart_item.quantity*cart_item.item.price) %></td>
      <td><%= link_to "Delete", cart_item, :confirm => 'Are you sure?', :method=>:delete, :class=>:Destroy %></td>
    </tr>
  <% end %>
  <tr>
    <td>
      Total: <%= number_to_currency @cart.total_price %>
    </td>
  </tr>
</table>

<p>
  <%= link_to "Continue Shopping", items_url %> |
  <%= link_to "Checkout" %>
</p>