<%= form_for(Category.new, :html=>{:class=>'form-horizontal', :multipart => true}) do |f| %>

<div class="control-group">
  <label class="control-label">
    <%= f.label :name, "Category Name *" %>
  </label>
  <div class="controls">
    <%= f.text_field :name, :placeholder=>"Category Name" %>
  </div>
</div>
<%= f.submit "Add Category", :class=>"btn-small btn-primary" %>

<% end %>