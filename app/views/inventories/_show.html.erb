<script type="text/javascript">
$(document).ready(function() {

// hide the non-javascript show link
$('.clasic_show').hide();

// make the item rows clickable and have a pointer hover-over
$('.item_row').css('cursor', 'pointer').addClass('show_link');


// SHOW ITEM BEHAVIOR

// after clicking the item row
$('.show_link').click(function() {

    // build the url for the item modal show page
    var url_string = "/inventories/<%= @producer.inventory.id %>/items/" + $(this).attr('data-id') + "/show_in_modal";

    // fire the modal
    $('#item_modal').modal({  
      remote: url_string
  });
    // refresh the modal so you can go to multiple items without refreshing the whole page
    setTimeout(
      function() {
         $('#item_show').load(url_string);
     },
     100)

 }); // end click


<% if signed_in? %>

// ADD TO CART BEHAVIOR
// replace default link behavior
$('.add_to_cart').attr('data-remote', true);


$('.add_to_cart').click(function() {

  $('#cart_modal').modal({
    remote: '<%= show_in_modal_cart_path(current_user.cart.id) %>'
});

// note: concern about the delay here too
// load the modal, but delay it slightly for time to add to cart
setTimeout(
  function() {
     $('#cart').load('<%= show_in_modal_cart_path(current_user.cart.id) %>');
 },
 100)

 }); // end click
// END ADD TO CART BEHAVIOR

<% end %>

// something about the partial makes this need to be here too
$('[data-toggle="tooltip"]').tooltip();
// make an array to store the list of categories for a producer
var list_of_categories = new Array();
$('.category_label').each(function() {
    // save the category name for easy use
    var category_name = $(this).text();
        // if the current category isn't there, add it
        if (($.inArray(category_name, list_of_categories)) == -1) {
            $('.category_list').after('<li class="category_filter"><a style="padding-left: 4px;">' + category_name + '</a></li>');
            list_of_categories.push(category_name);
        }
}); // end each

// add the 'All' option to the category list
$('.category_list').after('<li class="category_filter active"><a style="padding-left: 4px;">' + 'All' + '</a></li>');
list_of_categories.push('All');

// click behavior for when you select a present category
$('.category_filter').click(function() {
    // save the category name for easy use
    var category_name = $(this).text();

    // go through all the inventory on the to decide what to hide/show
    $('.category_label').each(function() {

    // make sure 'All' isn't selected, or the categories match
    if(($(this).text() != category_name) && (category_name != 'All')) {
        $(this).parent().hide();
        // otherwise show the current category
    } else {
        $(this).parent().show();

    // make the current category active or inactive on the navbar
    $('.category_filter').each(function() {
        if ($(this).text() == category_name) {
            $(this).addClass('active');
        } else {
            $(this).removeClass('active');
        }

    }); // end each
        } // end else
    }); // end each
}); // end click
}); // end ready

</script>




<!-- Modal for items -->
<div id="item_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <!-- <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button> -->
    <h3 id="itemModalLabel"></h3>
</div>
<div class="modal-body">
    <p></p>
</div>
</div>
<!-- End modal for items -->




<% if signed_in? && (current_user.admin || current_user.coordinator || current_user == @producer) %>

<div align="right" style="margin-right:20px; margin-bottom: -20px;
margin-top: -5px">
<%= link_to edit_user_path(params[:id]), :class=>"link", :'data-toggle'=>"tooltip", :title=>"Edit Account" do %>

<i class="icon-wrench"></i>
<% end %>
</div>
<% end %>

<% if !(@producer.inventory.inventory_photos.empty?) %>
<div id="myCarousel" class="carousel slide" data-interval="4000" 
    style="float:left; margin-bottom: 0px; margin-right: 10px; margin-top: -20px;" >

        <% if @producer.inventory.inventory_photos.length > 1 %>

        <ol class="carousel-indicators">
            <% @producer.inventory.inventory_photos.each_with_index do |inventory_photo, index| %>

            <% if index == 0 %>
            <li data-target="#myCarousel" data-slide-to="<%= index %>" class="active"></li>
            <% else %>
            <li data-target="#myCarousel" data-slide-to="<%= index %>"></li>
              <% end %>
            <% end %>
        </ol>
        <% end %>

        <!-- Carousel items -->
        <div class="carousel-inner">
            <% @producer.inventory.inventory_photos.each_with_index do |inventory_photo, index| %>
            <% if index == 0 %>    
              <div class="active item">
                <%= image_tag inventory_photo.photo.url(:gallery_size) %>
              </div>
            <% else %>
            <div class="item">
                <%= image_tag inventory_photo.photo.url(:gallery_size) %>
            </div>
            <% end %>  
            <% end %>  
        </div>
 
    <!-- Carousel nav -->

    <% if (@producer.inventory.inventory_photos.length > 1) %>
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
    <% end %>
</div>
<% end %>




<div style="text-align: left; margin-right: 20px; margin-left: 20px; margin-top: 0px">

    <h1><%= @producer.inventory.display_name %></h1>

    <% if @producer.inventory.url != nil %>
    <%= link_to @producer.inventory.url, url_with_protocol(@producer.inventory.url) %>
    <% end %>

</div>


<div style="text-indent: 2.5%; margin-right: 10px; margin-left: 10px; margin-top: 5px;">
    <%= @producer.inventory.description %>
</div>




<% if @item.count != 0 %>

<h3 class="inventory_title">Current Inventory</h3>

<table class="producer-table table-hover" align="center">

    <!-- ADD QTY REMAINING HERE ONCE WE MERGE WITH NEW ITEM MODEL -->

    <tr>
        <th></th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Min Order</th>
        <th>Category</th>    
        <th>Available</th>
        <% if @producer != current_user %>
        <th></th>
        <% end %>
        <% if current_user && (current_user.admin || current_user.coordinator || current_user == @producer) %>
        <th></th>
        <th></th>
        <% end %>
  
    </tr>

    <% @item.each do |item| %>
    <tr>

        <td>
            <% if !(item.item_photo_file_name.nil?) %>
            <media class="item_row" data-id="<%= item.id %>">
                <%= image_tag(item.item_photo.url(:thumb)) %>
            </media>
            <%end%>
        </td>

        <td class="item_row" data-id="<%= item.id %>"><%= item.name %></td>
        <td class="item_row" data-id="<%= item.id %>"><%= item.description.size < 50 ? item.description : item.description[0..50] + "..." %></td>
        <td class="item_row" data-id="<%= item.id %>">
            <%= number_to_currency(item.price) %><b>/<%= item.units.singularize %></b></td>
        <td class="item_row" data-id="<%= item.id %>"><%= item.minorder %></td>
        <td class="item_row category_label" data-id="<%= item.id %>"><%= Category.find(item.category_id).name %></td>
        <td class="item_row" data-id="<%= item.id %>"><%= item.is_available? %></td>

        <td class="clasic_show"><%= link_to "Show", inventory_item_path({ :inventory_id => params[:id], :id => item.id })%></td>

        <!-- add to cart -->
        <% if current_user && (@producer != current_user) && item.cartable %>

        <td style="width: 100px;">
            <%= link_to "Add to Cart", cart_items_path(:item_id => item), :remote => false, :method => :post, 
        :class => "add_to_cart btn" %>
        <% end %>
        <!-- end add to cart -->


        <!-- inventory controls -->
        <% if current_user && (current_user.admin || current_user.coordinator || current_user == @producer) %>
        <td>
            <%= link_to edit_inventory_item_path({ :inventory_id => params[:id], :id => item.id }), :'data-toggle'=>"tooltip", :title=>"Edit Item" do %>
            <i class="icon-wrench"></i>
            <% end %>
        
            <%= link_to inventory_item_path({ :inventory_id => params[:id], :id => item.id }), :confirm => 'Are you sure?', :method => :delete, :'data-toggle'=>"tooltip", :title=>"Delete Item" do %>
            <i class="icon-trash"></i>
            <% end %>
        </td>

        <% end %>
        <!-- end inventory controls -->

    </tr>
    <% end %> 
</table>


<% else %>
<h4 class="inventory_title">
    Currently Nothing For Sale
</h4>
<% end %> 
<br>

<!-- If the current user is an admin, coordinator, or the producer whose page this is -->
<% if signed_in? && (current_user.admin || current_user.coordinator || current_user == @producer) %>
<%= link_to 'Add Item', producer_new_inventory_items_path(params[:id]), :class=>"btn", :style=>"margin-left: 2.5%" %>
<% end %>

<!-- closing div's from the main show erb file -->
</div>
</div>
</div>

