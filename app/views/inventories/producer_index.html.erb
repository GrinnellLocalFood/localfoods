<% if notice %>
<div class="home_notice home_notice-success"><%= notice %></div>
<% end %>

<% if alert %>
<div class="home_alert home_alert-success"><%= alert %></div>
<% end %>

<div class="container">
    <div class="row-fluid">
        <div class="span12 custom-block">


      



            <div id="myCarousel" class="carousel slide" data-interval="4000"style="float:left; margin-right: 20px; margin-bottom: 0px; margin-top: -20px;" >
                <!-- Carousel items -->
                <div class="carousel-inner">

                    <div class="active item">
                        <img src="/img/r1.jpg" alt="">
                        <div class="carousel-caption">
                            <p>Caption text here</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="/img/r2.jpg" alt="">
                        <div class="carousel-caption">
                            <p>Caption text here</p>
                        </div>
                    </div>
                </div>
                <!-- Carousel nav -->
                <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
            </div>


            <h1 style="margin-top: -5px;"><%= @current_user.inventory.display_name %></h1>



            <div style="text-indent: 2.5%; margin-right: 20px;">
                <%= @current_user.inventory.description %>
            </div>


            <% if @item.count != 0 %>

<h3 style="clear:both; text-indent: 2.5%; margin-bottom: 15px; background-color: #595959; color: white; padding: 5px;">Current Inventory</h3>

            <table class="producer-table table-hover" align="center">

              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Total Quantity</th>
                <th>Price</th>
                <th>Quantity Ordered</th>
                <th>Min Order</th>
                <th>Max Order</th>
                <th>Available</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            <% @item.each do |item| %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.description %></td>
                <td><%= item.totalquantity %></td>
                <td><%= item.price %></td>
                <td><%= item.totalordered %></td>
                <td><%= item.minorder %></td>
                <td><%= item.maxorder %></td>
                <td><%= item.available %></td>
                <td><%= link_to 'Show', item %></td>
                <td><%= link_to 'Edit', edit_item_path(item) %></td>
                <td><%= link_to "Delete", item, :confirm => 'Are you sure?', :method=>:delete, :class=>:Destroy %></td>
            </tr>

            <% end %>


            </table>


<%= link_to 'Add Item', producer_new_inventory_items_path(current_user), :class=>"btn", :style=>"margin-left: 2.5%; margin-top: 20px;" %>


        <% else %>
        <div class="container">
            <div class="row">
                <div class="span8 offset2 custom-block">

                    <h1 align="center">You have no items!</h1>
                    <br>
                    <p align="center">Add items by clicking the "Add Item" button below</p>

                    <br>
                    <p align="center"><%= link_to 'Add Item', producer_new_inventory_items_path(current_user), :class=>"btn" %></p>
                </div>
            </div>
        </div>
        <% end %>
        


        </div>
    </div>
</div>