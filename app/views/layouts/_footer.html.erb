<script type="text/javascript">
$(document).ready(function() {

	$('#social-icons').css('display', 'inline');

	function fbs_click()
	{
		u=location.href;
		t=document.title;
		window.open('http://www.facebook.com/sharer.php?u='+encodeURIComponent(u)+'&t='+encodeURIComponent(t),'sharer', 'toolbar=0, status=0, width=626, height=436'); return false;
	}

	function twitter_click()
	{
		message = encodeURIComponent(document.title);
		url = encodeURIComponent(location.href);
		link = 'http://www.twitter.com/share?text=' +message+'&url='+url;
		window.open(link,'sharer', 'toolbar=0, status=0, width=626, height=436'); return false;
	}

}); // end ready

</script>


<footer class="footer">
	

	<div id="social-icons">

		<meta property="og:title" content="title" />
		<meta property="og:description" content="description" />
		<meta property="og:image" content="image" />


		<a rel="nofollow" href="javascript://" onclick="return fbs_click();" class="meta">
			<img alt="Share On Facebook" border="0" class="dock-item" src="/img/f_logo_140.png"
			width="30px" height="30px">
		</a>

		<a rel="nofollow" href="javascript://" onclick="return twitter_click();" class="meta">
			<img alt="Share On Twitter" border="0" class="dock-item" src="/img/twitter_bird_140.png"
			width="30px" height="30px">
		</a>


	</div>

	<div id="footer-text" class="container">
