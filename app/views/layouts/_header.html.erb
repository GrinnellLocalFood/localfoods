<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">


        <%= link_to image_tag("/img/just_localfood_horizontal_40.png", :width=>"250", :id=>"logohead"), root_path %>
        
        
        <ul class="nav pull-right">


          <% if signed_in? %>


          <% @inventories = Inventory.where("hidden = ?", false) %>
          <li class="dropdown nav">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Browse Producers
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <% @inventories.each do |inventory| %>
              <li><%= link_to inventory.display_name, inventory_path(inventory.id) %></li>
              <% end %>
            </li>   
          </ul>


          <% if current_user.producer %> 
          <li class="dropdown nav">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Producer
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Add Item", producer_new_inventory_items_path(current_user.id) %></li>
              <li><%= link_to "Inventory", inventory_path(current_user) %></li>
            </li>   
          </ul>
          <% end %>




          <li class="dropdown nav pull-right">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Account
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Edit Account", edit_user_path(current_user) %></li>
              <li><%= link_to "Change Password", editpassword_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Log Out", logout_path, :method => :delete %>
              </ul>
            </li>   
            <% else %>


            <%= form_for(:session, :url => sessions_path, 
            :html=>{:class=>'navbar-form pull-right'}) do |f| %>

            <%= f.text_field :email, :placeholder=>"Email", 
            :class=>"span2" %>

            <%= f.password_field :password, :placeholder=>"Password",
            :class=>"span2" %>

            <%= f.submit "Log In", :class=>"btn" %>

            <% end %>

            <% end %>

          </ul>


        </div>
      </div>



      <div class="navbar-inner-inner">
        <div class="container">
         <ul class="nav pull-left">

          <li style="margin-right:20px">Our Producers </li>

          <li style="margin-right:20px"><%= link_to("All Products", items_path, :style => "color:white") %></li>

          <li style="margin-right:20px">Pickup Info </li>

          <li style="margin-right:20px">Contact Us </li>

        </ul>
      </div>
    </div>

  </header>


