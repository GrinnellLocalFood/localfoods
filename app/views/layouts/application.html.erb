<!DOCTYPE html>
<html>

<head>
	<title><%= title %></title>

	<% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  	<% end %>

  	<% if alert %>
	<div class="alert"><%= alert %></div>
	<% end %>

	<%= stylesheet_link_tag '/stylesheets/custom.css' %>
