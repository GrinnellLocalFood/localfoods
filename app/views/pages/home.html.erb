<% if notice %>
<div class="home_notice home_notice-success fade in">
	<a class="close" data-dismiss="alert" href="#">&times;</a>
	<%= notice %>
</div>
<% end %>

<% if alert %>
<div class="home_alert home_alert-success fade in">
	<a class="close" data-dismiss="alert" href="#">&times;</a>
	<%= alert %>
</div>
<% end %>



<div id="hero-image-unit">
	<div class="container-fluid" align="right">
		<div class="row-fluid">
			<div id="hero-text">
				<h1>Welcome to the Grinnell Local Foods Coop</h1>
				<p>Support local farmers, local economy, and environmental sustainability by purchasing quality food grown right here in central Iowa.

					<br><br>
					<% if !signed_in? %>
					<%= link_to "Sign Up!", register_path,
					:class=>"btn btn-large" %>

					<% end %>
				</p>
			</div>
		</div>
	</div>
</div>

<div style="background-color: #eee; padding-bottom: 30px;">
<div id="announcements-container" class="container">
	<div class="row-fluid">
		<div id="announcements" class="span12" style="">
			<h3>Announcements</h3>
			<p>
				Welcome to the Grinnell Local Foods Coop! Orders will be open Jan 31 to Feb 7. Pickup will be on Feb 14 in the Quad. New members may create and account and place an order by following the link in the upper right corner. You will be asked to pay a membership fee when you pick up your order (see pickup information for more details). Happy ordering! Questions or comments? Send us an email!
			</p>
			<p>
				If you are not on our email list, contact coordinators at <strong>localfood@grinnell.edu</strong>.
			</p>
		</div>
	</div>
</div>
</div>

