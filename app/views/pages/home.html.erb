<% if notice %>
<div class="home_notice home_notice-success fade in">
	<a class="close" data-dismiss="alert" href="#">&times;</a>
	<%= notice %>
</div>
<% end %>

<% if alert %>
<div class="home_alert home_alert-success fade in">
	<a class="close" data-dismiss="alert" href="#">&times;</a>
	<%= alert %>
</div>
<% end %>



<div id ="hero-image-unit">
	<div class="container-fluid" align="right">
	<div class="row-fluid">
		<div class="hero-text" style="max-width: 720px;">
			<h1>Welcome to the Grinnell Local Foods Coop</h1>
			<p>Support local farmers, local economy, and environmental sustainability by purchasing quality food grown right here in central Iowa.

				<br><br>
				<% if !signed_in? %>
				<%= link_to "Sign Up!", register_path,
				:class=>"btn btn-large" %>

				<% end %>
				</p>
			</div>
		</div>
	</div>
</div>

