<div class="container">
  <div class="row">
    <div class="span12 custom-block">

      <% if notice %>
      <div class="alert alert-success fade in">
        <a class="close" data-dismiss="alert" href="#">&times;</a>
        <%= notice %>
      </div>
      <% end %>

      <% if alert %>
      <div class="alert alert-success fade in">
        <a class="close" data-dismiss="alert" href="#">&times;</a>
        <%= alert %>
      </div>
      <% end %>

      <div class="margin-five">
        <h2>Ordered Items</h2>
        <table class="table table-hover">
          <tr>
            <th></th>
            <th>Product</th>
            <th>Qty</th>
            <th>Full Price</th>
            <th>Paid For</th>
          </tr>
          <% for purchase in @purchases %>
          <td class="hidden-phone">
            <% if !(purchase.item.item_photo_file_name.nil?) %>
            <media class="item_row">
              <%= image_tag(purchase.item.item_photo.url(:thumb)) %>
            </media>
            <%end%>
          </td>
          <td class="hidden-phone item_row"><%= purchase.item.name %></td>
          <td class="hidden-phone item_row"><%= purchase.quantity %></td>
          <td class="hidden-phone item_row"><%= number_to_currency(purchase.quantity*purchase.item.price) %></td>
          <td class="hidden-phone item_row"><%= purchase.paid ? "Yes" : "No" %></td>
        </tr>
      </tr>
      <% end %>
    </table>


    <!-- Divider -->
<ul class="nav nav-list">
<li class="divider"></li>
</ul>


    <h5 id="cart_total" style="text-align: right;">Total: <%= number_to_currency current_user.pending_payment %></h5>
  </div>

</div>
</div>
</div>