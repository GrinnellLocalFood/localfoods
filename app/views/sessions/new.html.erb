<div class="container">
	<div class="row">
		<div class="span8 offset2 custom-block">

			<h1 align="center">Log In</h1><br>

			<%= form_for(:session, :url => sessions_path, 
			:html=>{:class=>'form-horizontal'}) do |f| %>

			<% if flash[:error] %>
			<div class="alert alert-error fade in">
				<a class="close" data-dismiss="alert" href="#">&times;</a>
				<%=h flash[:error] %>
			</div>
			<% end %>

			<div class="control-group">
				<label class="control-label">Email</label>
				<div class="controls">
					<%= f.text_field :email, :placeholder=>"Email" %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">Password</label>
				<div class="controls">
					<%= f.password_field :password, :placeholder=>"Password" %>
				</div>
			</div>


			<div class="control-group controls">
				<%= f.submit "Log In", :class=>"btn" %>
			</div>
			<% end %>
			<p align="center" style="color:gray">New user? <%= link_to "Sign Up!", register_path %>
			</p>
			<p align="center" style="color:gray">Forgot your password? <%= link_to "Reset!", new_password_reset_path %>
			</p>

		</div>
	</div>
</div>
