<div class="container">
  <div class="row">
    <div class="span8 offset2 custom-block">

      <h1 align="center">Edit Account</h1><br>


      <%= form_for(@user, :html=>{:class=>'form-horizontal'}) do |f| %>
      <% if @user.errors.any? %>
      <div class="alert alert-error">
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>

        <br><ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="control-group">
      <label class="control-label">
        <%= f.label(:first_name, "First Name *", :placeholder=>"First Name") %>
      </label>
      <div class="controls">
        <%= f.text_field :first_name %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">
        <%= f.label :last_name, "Last Name *" %>
      </label>
      <div class="controls">
        <%= f.text_field :last_name, :placeholder=>"Last Name" %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">
        <%= f.label :email, "Email *" %>
      </label>
      <div class="controls">
        <%= f.text_field :email, :placeholder=>"Email" %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">
        <%= f.label :phone %>
      </label>
      <div class="controls">
        <%= f.text_field :phone, :placeholder=>"Phone" %>
      </div>
    </div>

    <!-- admin specific options -->



    <% if current_user.admin || current_user.coordinator %>
    <div class="controls">
      
      <% if current_user.admin %>
      <label class="checkbox inline">
        Admin
        <%= f.check_box :admin %>
      </label>
      <% end %>
      
      <label class="checkbox inline">
        Coordinator
        <%= f.check_box :coordinator %>
      </label>

      <label class="checkbox inline">
        Producer
        <%= f.check_box :producer %>
      </label>
    </div>
    <% end %>



    <br>
    <div class="control-group controls">
      <%= f.submit "Save", :class=>"btn btn-primary"%>
    </div>

    <div align="center">
      * Denotes required field
    </div>


    <% end %>

  </div>
</div>
</div>