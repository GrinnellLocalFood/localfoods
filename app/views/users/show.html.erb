<div class="container">
	<div class="row">
		
		
		<% if (current_user.admin || current_user.coordinator || (@user.producer && current_user == @user)) %>
		
		<div id="user-sidebar" class="span2-half custom-block">
			<ul class="nav nav-list">

				<% if current_user.admin || current_user.coordinator %>
				<li class="nav-header" style="padding-left: 12px">Administration</li>
				<li><%= link_to 'All Users', users_path %></li>

				<% if current_user == @user %>
				<li><%= link_to 'Add Item for Producer', admin_coord_newitem_path %></li>
				<% end %>
				<% end %>


				<% if current_user.admin %>
					<li><%= link_to 'Add User', new_user_path %></li>
					<li><%= link_to 'Open/Close Orders', '/editorderstate' %></li>
					<li><%= link_to 'Categories', categories_path %></li>
				<% end %>

				<% if @user.producer %>
				<li class="nav-header" style="padding-left: 12px">Producer Options</li>
				<li><%= link_to 'View Inventory', inventory_path(@user.id) %></li>
				<li><%= link_to 'Add Item', producer_new_inventory_items_path(@user.id) %></li>
				<li><%= link_to 'Add Multiple Items', add_inventory_path(@user.id) %></li>
				<li><%= link_to 'Edit Multiple Items', edit_inventory_path(@user.id) %></li>
				<% end %>
			</ul>
		</div>

		<!-- spacing for members, who don't have the above sidebar -->
		<% else %>
		<div class="span2">
		</div>
		<% end %>

		<div class="span8 custom-block">

			<% if notice %>
			<div class="alert alert-success fade in">
				<a class="close" data-dismiss="alert" href="#">&times;</a>
				<%= notice %>
			</div>
			<% end %>

			<% if alert %>
			<div class="alert alert-success fade in">
				<a class="close" data-dismiss="alert" href="#">&times;</a>
				<%= alert %>
			</div>
			<% end %>

			<div align="right" style="margin-right: 7.5%; margin-bottom:-40px;
			margin-top: 20px">
			<%= link_to edit_user_path(params[:id]), :class=>"link", :'data-toggle'=>"tooltip", :title=>"Edit Account" do %>

			<i class="icon-wrench"></i>
		</div>
		<% end %>
		
		<h2 style="margin-left: 7.5%;">Hello <%= @user.first_name %>!</h2>
		<br>

		<table class="table" style="width: 85%;" align="center">
				<tr>
					<th style="color: gray">Name</th>
					<td style="text-align:right"><%= @user.first_name + " " + @user.last_name %></td>
				</tr>

				<tr>
					<th style="color: gray">Email</th>
					<td style="text-align:right"><%= @user.email %></td>
				</tr>

				<tr>
					<th style="color: gray">Phone</th>
					<td style="text-align:right"><%= @user.phone %></td>
				</tr>

				<tr>
					<th style="color: gray">Roles</th>
					<td style="text-align:right">

						<% if @user.member %>
						Member
						<% end %>

						<% if @user.producer %>
						, Producer 
						<% end %>

						<% if @user.coordinator %>
						, Coordinator 
						<% end %>

						<% if @user.admin %>
						, Admin 
						<% end %>

					</td>
				</table>


				<% if @user.producer %>
				<br>
				<ul class="nav nav-list">
					<li class="divider"></li>
				</ul>
				<br>
				<h4 style="margin-left: 7.5%;">Producer Information</h4>	
				<br>			
				<table class="table" style="width:85%;" align="center">
					<tr>
						<th style="color: gray">Producer Name</th>
						<td style="text-align:right"><%= @user.inventory.display_name %></td>
					</tr>

					<tr>
						<th style="color: gray">Website</th>
						<td style="text-align:right"><%= @user.inventory.url %></td>
					</tr>

					<tr>
						<th style="color: gray">Description</th>
						<td style="text-align:right"><%= @user.inventory.description %></td>
					</tr>

				</table>

			</div>
			<% end %>
		</div>
	</div>
