<div class="container-fluid">
	<div class="row-fluid">
		<div class="span4 offset4 custom-block">

			

			<h2 align="center">Hello <%= @user.first_name %>!</h2>

			<div align="center">
			<strong>Your Roles:</strong>
			
			<% if @user.member %>
			Member 
			<% end %>

			<% if @user.farmer %>
			, Farmer
			<% end %>

			<% if @user.coordinator %>
			, Coordinator 
			<% end %>

			<% if @user.admin %>
			, Admin
			<% end %>

			<br><br>
			<% if current_user.admin %>
				<%= link_to 'Add User', new_user_path,
					:class=>"btn" %>
			<% end %>
			<% if current_user.admin || current_user.coordinator %>
				<%= link_to 'Show Users', users_path, :class=>"btn" %>
			<% end %>

			<% if current_user.farmer %>
				<%= link_to 'Add Item', newitem_path, :class=>"btn" %>

				<%= link_to 'Inventory', inventories_path, :class=>"btn" %>	
			<% end %>
	
			</div>


		</div>
	</div>
</div>